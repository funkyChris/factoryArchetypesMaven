<archetype-descriptor name="factory-archetype-service" xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0 http://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd" xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <requiredProperties>
    <requiredProperty key="groupId">
      <defaultValue>org.qualipso</defaultValue>
    </requiredProperty>
    <requiredProperty key="artifactId">
      <defaultValue>factory-service-myservice</defaultValue>
    </requiredProperty>
    <requiredProperty key="version">
      <defaultValue>1.0-SNAPSHOT</defaultValue>
    </requiredProperty>
    <requiredProperty key="package">
      <defaultValue>org.qualipso.factory.service.myservice</defaultValue>
    </requiredProperty>
    <requiredProperty key="serviceName">
      <defaultValue>myservice</defaultValue>
    </requiredProperty>
    <requiredProperty key="serviceNameCapitalized">
      <defaultValue>Myservice</defaultValue>
    </requiredProperty>
    <requiredProperty key="resourceName">
      <defaultValue>myresource</defaultValue>
    </requiredProperty>
    <requiredProperty key="resourceNameCapitalized">
      <defaultValue>Myresource</defaultValue>
    </requiredProperty>
  </requiredProperties>
  <fileSets>
    <fileSet packaged="true" filtered="true" encoding="UTF-8">
      <directory>src/main/java</directory>
      <includes>
        <include>**/*.java</include>
      </includes>
    </fileSet>
    <fileSet filtered="true" encoding="UTF-8">
      <directory>src/main/resources</directory>
      <includes>
        <include>**/*.xml</include>
      </includes>
    </fileSet>
    <fileSet packaged="true" filtered="true" encoding="UTF-8">
      <directory>src/test/java</directory>
      <includes>
        <include>**/*.java</include>
      </includes>
    </fileSet>
    <fileSet filtered="true" encoding="UTF-8">
      <directory>src/test/resources</directory>
      <includes>
        <include>**/*.properties</include>
      </includes>
    </fileSet>
  </fileSets>
</archetype-descriptor>
