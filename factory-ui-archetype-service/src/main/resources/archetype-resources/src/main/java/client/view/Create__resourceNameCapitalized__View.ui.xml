#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field='resources' type='${package}.client.resources.${serviceNameCapitalized}Resources' />

    <g:VerticalPanel>
        <g:Label>Create a ${resourceName}</g:Label>
        <g:HorizontalPanel>
            <g:Label>${resourceNameCapitalized} name:</g:Label>
            <g:TextBox ui:field="name"></g:TextBox>
        </g:HorizontalPanel>
        <g:Button ui:field="create">Create</g:Button>
    </g:VerticalPanel>

</ui:UiBinder> 
